Lagrange polynomials are used as nodes in Gauss-quadrature rule
\end_layout

\begin_layout Remark
\begin_inset Formula $\pi^{L}(\tau_{i}^{L})=0,\,\pi(\tau_{i})=0\;\Longrightarrow\;\pi^{L}(\frac{a+b}{a-b}+\frac{2}{b-a}\tau_{i})=0\;\Longrightarrow\;\tau_{i}^{L}=\frac{a+b}{a-b}+\frac{2}{b-a}\tau_{i}\;\Longrightarrow\;\frac{a+b}{2}+\frac{b-a}{2}\tau_{i}^{L}=\tau_{i}$
\end_inset

 
\end_layout

\begin_layout Remark
\begin_inset Formula $\lambda_{j}=\frac{\int_{a}^{b}\prod_{i\neq j,i=0}^{n}(x-\tau_{i})\,dx}{\prod_{i\neq j,i=0}^{n}(\tau_{j}-\tau_{i})}=\frac{\int_{a}^{b}\prod_{i\neq j,i=0}^{n}(x-\frac{a+b}{2}-\frac{b-a}{2}\tau_{i}^{L})\,dx}{\prod_{i\neq j,i=0}^{n}(\frac{a+b}{2}+\frac{b-a}{2}\tau_{j}^{L}-\frac{a+b}{2}-\frac{b-a}{2}\tau_{i}^{L})}=\frac{\int_{-1}^{1}\prod_{i\neq j,i=0}^{n}(\frac{a+b}{2}+\frac{b-a}{2}\hat{x}-\frac{a+b}{2}-\frac{b-a}{2}\tau_{i}^{L})\,d\hat{x}}{\prod_{i\neq j,i=0}^{n}(\frac{b-a}{2}(\tau_{j}^{L}-\tau_{i}^{L}))}=\frac{(\frac{b-a}{2})^{n-1}\int_{-1}^{1}\prod_{i\neq j,i=0}^{n}(\hat{x}-\tau_{i}^{L})\,d\hat{x}}{(\frac{b-a}{2})^{n-1}\prod_{i\neq j,i=0}^{n}(\tau_{j}^{L}-\tau_{i}^{L})}=\frac{\int_{-1}^{1}\prod_{i\neq j,i=0}^{n}(\hat{x}-\tau_{i}^{L})\,d\hat{x}}{\prod_{i\neq j,i=0}^{n}(\tau_{j}^{L}-\tau_{i}^{L})}=\lambda_{j}^{L}$
\end_inset


\end_layout

\begin_layout Remark
or (more likely):
\end_layout

\begin_layout Remark
\begin_inset Formula $\lambda_{j}=\beta_{0}v_{v,1}^{2},\lambda_{j}^{L}=\beta_{0}^{L}v_{v,1}^{2},\;\beta_{0}^{L}=2\;\beta_{0}=\int_{I}w(x)dx=\int_{a}^{b}1\,dx=b-a\;\Longrightarrow\;\lambda_{j}=\frac{2}{2}(b-a)v_{v,1}^{2}=\frac{(b-a)}{2}2v_{v,1}^{2}=\frac{(b-a)}{2}\lambda_{j}^{L}$
\end_inset


\end_layout

